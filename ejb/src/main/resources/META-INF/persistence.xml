<?xml version="1.0" encoding="UTF-8"?>
      <persistence xmlns="https://jakarta.ee/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
          https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
        version="3.0"
        >
    <persistence-unit name="epda" transaction-type="JTA">
        <!-- Assuming jdbc/myDataSource is the JNDI name for the DataSource configured in GlassFish -->
        <jta-data-source>jdbc/epda</jta-data-source>
  <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/epda"/>
      <property name="jakarta.persistence.jdbc.user" value="aaron"/>
      <property name="jakarta.persistence.jdbc.password" value="aaron"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
      <!-- Hibernate properties -->
      <!-- Additional properties can be added here -->
    </properties>
  </persistence-unit>
</persistence>
